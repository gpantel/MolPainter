doi = {10.1093/bioinformatics/btv292},
issn = {14602059},
journal = {Bioinformatics},
number = {17},
pages = {2897--2899},
title = {{MemGen: A general web server for the setup of lipid membrane simulation systems}},
volume = {31},
year = {2015}
}
